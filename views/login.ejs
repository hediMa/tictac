  <!-- MAIN CONTAINER -->    
  <div class="container">
    <div class="row" style="width: 100%; height: 200px;"></div>
    <div class="row">

  <!-- SIGN IN AREA -->
    <div class="formArea col-md-4 offset-md-2">
      <h4 class="titleForm">Sign In</h4>
      <form action="/sign-in" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1"></label>
          <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1"></label>
          <input name="passwordFromFront" type="password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-info">Confirm</button>
      </form>
    </div>

      <!-- SIGN UP AREA -->
    <div class="formArea col-md-4 ">
      <h4 class="titleForm">Sign Up</h4>
      <form action="/sign-up" method="POST">
        <div class="form-group">
          <label for="exampleInputUsername"></label>
          <input required name="nameFromFront" type="text" class="form-control" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="exampleInputUsername"></label>
          <input required name="firstNameFromFront" type="text" class="form-control" placeholder="Firstname">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1"></label>
          <input required name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1"></label>
          <input required name="passwordFromFront" type="password" class="form-control"  placeholder="Password">
        </div>
        <button type="submit" class="btn btn-info">Confirm</button>
      </form>
    </div>


              
      
              
